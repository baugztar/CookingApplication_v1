<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/itemyo"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:id="@+id/listItem_img"/>
        <TextView
            android:focusable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:clickable="true"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/listItem_img"
            android:fontFamily="sans-serif-light"
            android:layout_alignWithParentIfMissing="true"
            android:id="@+id/listItem_name"/>
        <TextView
            android:focusable="false"
            android:id="@+id/listItem_diff"
            android:clickable="true"
            android:layout_below="@+id/listItem_name"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/listItem_img"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignWithParentIfMissing="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:focusable="false"
            android:id="@+id/listItem_time"
            android:clickable="true"
            android:layout_below="@+id/listItem_diff"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/listItem_img"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignWithParentIfMissing="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/listItem_name"
            android:id="@+id/favIcon"/>
    </RelativeLayout>
</RelativeLayout>